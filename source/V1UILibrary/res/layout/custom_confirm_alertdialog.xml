<!-- 自定义-确认-对话框 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="250dp"
	android:layout_height="120dp"
	android:background="@drawable/fcrect"
	android:layout_gravity="center"
	android:orientation="vertical">
	<TextView
	    android:id="@+id/customAlertDialogTitel"
	    android:text="标题"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:textColor="@color/black"
	    android:textSize="15sp"
	    android:layout_gravity="center_horizontal"/>
	<View 
        android:layout_width="fill_parent"
        android:layout_height="0.5dp" 
        android:layout_marginTop="35dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@color/LightGray" />
	<!-- 确定及取消按钮 -->
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="2dp"
	    android:layout_marginRight="2dp"
	    android:orientation="horizontal">
		<Button
		    android:id="@+id/customAlertDialogConfirmButton"
		    android:layout_width="fill_parent"
		    android:layout_height="42dp"
		    android:layout_weight="1"
		    android:text="确定"
		    android:textSize="18sp" 
		    android:background="@drawable/btn_fcrect_bottomleft"/>
		<View 
	        android:layout_width="0.5dp"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center" 
	        android:background="@color/LightGray" />
		<Button
		    android:id="@+id/customAlertDialogCancelButton"
		    android:layout_width="fill_parent"
		    android:layout_height="42dp"
		    android:layout_weight="1"
		    android:text="取消"
		    android:textSize="18sp" 
		    android:background="@drawable/btn_fcrect_bottomright" />
	</LinearLayout>
</LinearLayout>