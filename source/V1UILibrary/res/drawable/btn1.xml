<?xml version="1.0" encoding="utf-8"?>
<!-- 按钮1-圆角白渐变蓝-->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true">
	    <shape>
		    <gradient 
	        	android:startColor="@color/skyblue2"
	        	android:centerColor="@color/skyblue2"
	        	android:endColor="@color/white"
	        	android:angle="270"/>
		    <stroke   
				android:width="1dp" 
				android:color="@color/darkGray1" />
		    <corners android:radius="5dp" />
	    </shape>
	</item>
    <item>
        <shape>
	        <gradient 
		        android:startColor="@color/white"
		        android:centerColor="@color/skyblue2"
		        android:endColor="@color/skyblue2"
		        android:angle="270"/>
		    <stroke   
				android:width="1dp" 
				android:color="@color/darkGray1" />
		    <corners android:radius="5dp" />
	    </shape>
    </item>
</selector>
