<?xml version="1.0" encoding="utf-8"?>  
<!-- 普通矩形(按下灰色)(无边框) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
	<item android:state_pressed="true">
	    <shape>
		    <solid android:color="@color/LightGray" /> 
		</shape>
	</item>
    <item>
        <shape>
		    <solid android:color="@color/white" /> 
		</shape>
    </item> 
</selector>
